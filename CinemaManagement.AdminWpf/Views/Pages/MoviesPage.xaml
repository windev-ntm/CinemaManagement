<Page x:Class="CinemaManagement.AdminWpf.Views.Pages.MoviesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:CinemaManagement.AdminWpf.Views.Pages"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:controls="clr-namespace:CinemaManagement.AdminWpf.Views.Controls"
      xmlns:controlVMs="clr-namespace:CinemaManagement.AdminWpf.ViewModels.Controls"
      Title="MoviesPage"
      d:DataContext="{d:DesignInstance local:MoviesPage,
                                     IsDesignTimeCreatable=False}"
      d:DesignHeight="450"
      d:DesignWidth="800"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      mc:Ignorable="d">
    <Page.Resources>
        <DataTemplate DataType="{x:Type controlVMs:MovieListViewModel}">
            <controls:MovieListControl />
        </DataTemplate>
    </Page.Resources>

    <Grid VerticalAlignment="Top">
        <ContentControl Content="{Binding ViewModel.CurrentViewModel}" />
    </Grid>
</Page>
